#:kivy 1.9.1
#:import MDSeparator kivymd.card.MDSeparator

# Экран с текстом лицензии.

<ShowLicense>:
    name: 'show license'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)

        Label:
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '18sp'
            text: app.data.string_lang_mit

        MDSeparator:

        Image:
            source: 'license/open-source-logo.png'

        ScrollView:

            Label:
                id: text_license
                color: app.data.text_color_from_hex
                font_size: '12sp'
                text_size: self.width, None
                size_hint_y: None
                markup: True
                height: self.texture_size[1]
