#: kivy 1.9.1
# Тело поста.

# Иконка и количество коментариев.
<IconCountComments>:
    size_hint_y: None
    height: dp(30)
    spacing: dp(5)

    # libs/uix/list.py <Icon>
    Icon:
        size_hint: None, None
        size: dp(30), dp(30)
        source: 'data/images/comments_box.png'

    Label:
        id: comments_post
        text_size: self.width, None
        markup: True
        color: app.data.text_color_from_hex
        font_size: '11sp'

<Post>:
    _app: app
    orientation: 'vertical'
    padding: dp(10), dp(0)
    spacing: dp(5)
    size_hint_y: None

    # libs/uix/kv/list.kv <IconItemAsync>
    # Аватар автора, имя и дата поста.
    IconItemAsync:
        id: title_post
        disabled: True

    # Текс поста.
    Label:
        id: text_posts
        markup: True
        color: app.data.text_color_from_hex
        font_size: '12sp'
        text_size: self.width, None
        valign: 'top'
        on_ref_press: root.tap_on_text_or_link_post(args)
