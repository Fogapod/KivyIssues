#: kivy 1.9.1
#: import MDSeparator kivymd.card.MDSeparator

# Тело поста.

<Post>:
    orientation: 'vertical'
    padding: dp(10), dp(5)
    spacing: dp(5)
    size_hint_y: None
    height: 200

    IconItemAsync:
        id: title_post
        disabled: True

    Label:
        id: text_posts
        markup: True
        color: app.data.text_color_from_hex
        font_size: '12sp'
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]

    MDSeparator:
