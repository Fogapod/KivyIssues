#: kivy 1.9.1

# View для вывода списка постов группы.

<BoxPosts>:
    name: 'box posts'

    canvas:
        Color:
            rgb: 0.792156862745098, 0.792156862745098, 0.792156862745098, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: box_paginator
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(5)

        ScrollView:

            GridLayout:
                id: box_posts
                cols: 1
                spacing: dp(5)
                size_hint_y: None
                height: self.minimum_height
