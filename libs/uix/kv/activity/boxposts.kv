#: kivy 1.9.1
# View для вывода списка постов группы.

<BoxPosts>:
    canvas:
        Color:
            rgb: 0.792156862745098, 0.792156862745098, 0.792156862745098, 1
        Rectangle:
            pos: self.pos
            size: self.size

    id: box_posts
    orientation: 'vertical'
    spacing: dp(5)
    padding: dp(5)

    ScrollView:

        GridLayout:
            id: list_posts
            cols: 1
            spacing: dp(5)
            size_hint_y: None
            height: self.minimum_height
