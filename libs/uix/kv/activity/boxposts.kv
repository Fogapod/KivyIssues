#: kivy 1.9.1
# View для вывода списка постов группы.

<BoxPosts>:
    _app: app

    BoxLayout:
        canvas:
            Color:
                rgba:
                    0.792156862745098, 0.792156862745098, 0.792156862745098, 1
            Rectangle:
                pos: self.pos
                size: self.size

        id: box_posts
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(5)

        ScrollView:

            GridLayout:
                id: list_posts
                cols: 1
                spacing: dp(5)
                size_hint_y: None
                height: self.minimum_height

    # Форма для ввода текста.
    # /libs/uix/kv/activity/form_input_text.kv
    FormInputText:
        id: input_text_form
