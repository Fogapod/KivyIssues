#:kivy 1.9.1
#:import MDLabel kivymd.label.MDLabel
#:import SingleLineTextField kivymd.textfields.SingleLineTextField
#:import MDRaisedButton kivymd.button.MDRaisedButton

# Макет для ввода логина и пароля.

<PasswordForm>:
    id: box
    orientation: 'vertical'
    padding: dp(15)
    spacing: dp(10)

    BoxLayout:
        size_hint_y: None
        height: dp(48)
        spacing: dp(10)

        Image:
            source: 'data/images/vk_logo_blue.png'
            size_hint: None, None
            size: dp(48), dp(48)

        MDLabel:
            font_style: 'Title'
            theme_text_color: 'Primary'
            text: 'Registration'
            halign: 'left'

    SingleLineTextField:
        id: login
        size_hint: 1, None
        height: dp(48)
        hint_text: 'Login'
        password: True

    SingleLineTextField:
        id: password
        size_hint: 1, None
        height: dp(48)
        hint_text: 'Password'
        password: True

    Selection:
        callback: app.show_login_and_password
        text: 'View login and password'
        size_hint: 1, None
        height: dp(48)

    MDRaisedButton:
        id: button_ok
        text: 'OK'
        on_release: root.callback()

    Widget:
