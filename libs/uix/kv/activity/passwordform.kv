#: kivy 1.9.1
#: import MDCard kivymd.card.MDCard
#: import MDLabel kivymd.label.MDLabel
#: import MDFloatingActionButton kivymd.button.MDFloatingActionButton
#: import SingleLineTextField kivymd.textfields.SingleLineTextField

[PasswordForm@ModalView]:
    size_hint: .8, .5
    background_color: 0, 0, 0, .2
    auto_dismiss: ctx.dismiss

    MDCard:

        BoxLayout:
            orientation: 'vertical'
            padding: dp(15)
            spacing: dp(10)

            BoxLayout:
                size_hint_y: None
                height: dp(48)
                spacing: dp(10)

                Image:
                    source: 'data/images/vk_logo_blue.png'
                    size_hint: None, None
                    size: dp(48), dp(48)

                MDLabel:
                    font_style: 'Title'
                    theme_text_color: 'Primary'
                    text: ctx.title
                    halign: 'left'

            SingleLineTextField:
                id: login
                size_hint: 1, None
                height: dp(48)
                hint_text: ctx.hint_text_login
                password: ctx.password

            SingleLineTextField:
                id: password
                size_hint: 1, None
                height: dp(48)
                hint_text: ctx.hint_text_password
                password: ctx.password

            Selection:
                callback: app.show_login_and_password
                text: 'View login and password'

            Widget:

		    BoxLayout:
		        id: box_buttons

			    MDFlatButton:
                    text: ctx.text_button_ok
                    on_release: ctx.events_callback(self.text)
                    text_color: app.theme_cls.primary_color