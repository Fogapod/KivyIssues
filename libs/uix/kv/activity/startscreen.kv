#: kivy 1.9.1
#: import Clock kivy.clock.Clock
#: import Toolbar kivymd.toolbar.Toolbar

<StartScreen>
    orientation: 'vertical'

	Toolbar:
        id: action_bar
        background_color: app.theme_cls.primary_color
        title: app.title
        left_action_items: [['menu', lambda x: app.nav_drawer.toggle()]]
        right_action_items: [['comment-outline', lambda x: None]]
        opposite_colors: True
        elevation: 10
        on_right_action_items:
            app.open_dialog(app.data.string_lang_new_issues, app.title, True)

    ScrManager:
        id: manager
        _app: app

        Previous:
            id: previous

        AskAQuestion:
            id: ask_a_question

        BoxPosts:
            id: box_posts
