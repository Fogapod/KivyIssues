# -*- coding: utf-8 -*-

#:kivy 1.9.1
#:import Toolbar kivymd.toolbar.Toolbar

<StartScreen>
    orientation: 'vertical'

	Toolbar:
        id: action_bar
        background_color: app.theme_cls.primary_color
        title: app.title
        left_action_items: [['menu', lambda x: app.nav_drawer._toggle()]]
        right_action_items: [['comment-outline', lambda x: None]]
        opposite_colors: True
        elevation: 10
        on_right_action_items:
            app.open_dialog(app.translation._(\
            'В группе появились новые вопросы!'), app.title, True)

    ScreenManager:
        id: manager

        LoadScreen:
            id: load_screen

        ShowLicense:
            id: show_license

        Previous:
            id: previous
