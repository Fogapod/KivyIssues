#:kivy 1.9.1
#:import SingleLineTextField kivymd.textfields.SingleLineTextField

# Окошко для ввода текста с кнопками прикрепления фото/файла,
# подписями 'Отправить' и 'Кому'.

<FormInputText>:
    padding: dp(10), dp(20), dp(10), dp(20)
    spacing: dp(10)
    size_hint: None, None
    pos_hint: {'x': .015, 'y': -.3}
    size: dp(app.window.width - 10), dp(120)

    canvas:
        Color:
            rgba:
                0.9686274509803922, 0.9686274509803922, 0.9686274509803922, .9
        Rectangle:
            pos: self.pos
            size: self.size

    Icon:
        id: add_foto
        size_hint: None, None
        size: dp(30), dp(30)
        source: 'data/images/camera.png'
        on_release: root.callback('FOTO')

    SingleLineTextField:
        id: text_input
        font_size: '12sp'
        size_hint_y: None
        height: dp(100)
        message_mode: 'persistent'

    BoxLayout:
        size_hint_x: None
        width: dp(60)
        spacing: dp(10)

        Icon:
            id: add_file
            size_hint: None, None
            size: dp(30), dp(30)
            source: 'data/images/paperclip.png'
            on_release: root.callback('FILE')

        Icon:
            id: send
            size_hint: None, None
            size: dp(30), dp(30)
            source: 'data/images/send.png'
            on_release: root.callback('SEND')
