#:kivy 1.9.1
#:import MDSpinner kivymd.spinner.MDSpinner

<LoadScreen>:
    name: 'load screen'

    FloatLayout:

        Image:
            source: 'data/images/presplash_invert.png'
            opacity: .1

        BoxLayout:
            id: box
            orientation: 'vertical'
            padding: dp(0), dp(10)

            Widget:
            Widget:

            Label:
                id: status
                font_size: '14sp'
                bold: True
                color: app.text_color_from_hex
                markup: True
                halign: 'center'

            MDSpinner:
                id: spinner
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x': .5}
                active: False

            Widget:
            Widget:
