#: kivy 1.9.1
#: import MDFloatingActionButton kivymd.button.MDFloatingActionButton
#: import SingleLineTextField kivymd.textfields.SingleLineTextField

<AskAQuestion>:
    name: 'ask a question'

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: box_issues
            orientation: 'vertical'
            padding: dp(5), dp(5)
            size_hint_y: .9

            SingleLineTextField:
                id: theme_field
                size_hint_y: None
                height: dp(50)
                font_size: '14sp'
                on_text: root.check_status_fields(issue_field, self)

            TextInput:
                id: issue_field
                size_hint_y: .9
                font_size: '14sp'
                cursor_color: app.theme_cls.primary_color
                on_text: root.check_status_fields(issue_field, self)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(80)

            Selection:
                id: add_image
                callback: app.check_status

            Selection:
                id: add_file
                callback: app.check_status

    MDFloatingActionButton:
        id: button_send
        icon: 'email'
        size_hint: None, None
        size: dp(56), dp(56)
        opposite_colors: True
        elevation_normal: 8
        pos: dp(app.window.size[0] - self.width - 10), dp(10)
        background_color: app.theme_cls.primary_color
        background_color_down: app.data.floating_button_down_color
        background_color_disabled: app.data.floating_button_disabled_color
        on_release:
            app.create_data_from_form()
